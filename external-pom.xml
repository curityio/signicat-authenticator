<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0">
    <modelVersion>4.0.0</modelVersion>

    <groupId>io.curity.identityserver.plugin</groupId>
    <artifactId>identityserver.plugins.authenticators.signicat-external</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>Signicat External</name>
    <description>This POM is used to compile the Signicat authenticator plug-in when access to the Signicat Java
        Connector library is not available from a local or remote Maven repository.</description>
    
    <modules>
        <module>.</module>
        <module>java-connector</module>
    </modules>

    <profiles>
        <profile>
            <id>external</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
    </profiles>

</project>
